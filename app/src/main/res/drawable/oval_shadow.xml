<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  left shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:centerColor="@color/mainGray"
                android:centerX="0.98"
                android:endColor="#66969595"
                android:startColor="#00FF0000" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="360"
                android:centerColor="@color/mainGray"
                android:centerX="0.98"
                android:endColor="#66969595"
                android:startColor="#00FF0000" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#66969595" />
        </shape>
    </item>

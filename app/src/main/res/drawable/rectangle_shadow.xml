<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/mainGray"
                android:centerX="0.98"
                android:endColor="#66969595"
                android:startColor="#00FF0000" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/mainGray"
                android:centerX="0.98"
                android:endColor="#66969595"
                android:startColor="#00FF0000" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#66969595" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
<!--            <gradient-->
<!--                android:angle="90"-->
<!--                android:centerColor="#00FF0000"-->
<!--                android:centerY="0.1"-->
<!--                android:endColor="#00FF0000"-->
<!--                android:startColor="#6B000000" />-->
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>